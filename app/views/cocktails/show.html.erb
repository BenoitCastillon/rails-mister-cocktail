<h1>Cocktails#show</h1>
<p>Find me in app/views/cocktails/show.html.erb</p>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h1><%= @cocktail.name %></h1>

      <div>
        <ul class="list-group">
        <% @cocktail.doses.select do |dose| %>
          <% if dose.cocktail_id == @cocktail.id  %>
          <li class="list-group-item">
            <span><%= dose.description %></span>
            <%= link_to 'Delete', dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } %>
          </li>
          <% end %>
        <% end %>
        </ul>
      </div>

      <div>
        <p><%= link_to "Add a new Dose", new_cocktail_dose_path(@cocktail) %></p>
        <p><%= link_to "Back to Cocktails", cocktails_path(@cocktail) %></p>
      </div>
    </div>
  </div>
</div>
